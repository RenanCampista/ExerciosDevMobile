<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_salario"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editGastos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_gastos"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editDependentes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_dependentes"
        android:inputType="number" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resultado_inicial"
        android:textAlignment="center"
        android:textColor="@color/azul"
        android:textSize="20sp"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/btn_calcular"
        android:backgroundTint="@color/verde" />

</LinearLayout>
